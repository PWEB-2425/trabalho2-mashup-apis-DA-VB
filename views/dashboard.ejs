<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow-lg">
        <div class="max-w-6xl mx-auto px-4">
            <div class="flex justify-between">
                <div class="flex space-x-7">
                    <div class="py-4">
                        <span class="font-semibold text-gray-500">Bem-vindo, <%= user.name %></span>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <a href="/auth/logout" class="py-2 px-4 bg-red-500 text-white rounded hover:bg-red-600">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <h2 class="text-2xl font-bold mb-6">Pesquisar Clima</h2>
            
            <div class="bg-white p-6 rounded-lg shadow-md mb-6">
                <div class="flex gap-4">
                    <input type="text" id="cityInput" placeholder="Digite o nome da cidade"
                        class="flex-1 px-4 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                    <button id="searchButton"
                        class="px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                        Pesquisar
                    </button>
                </div>
            </div>

            <div id="weatherResult" class="bg-white p-6 rounded-lg shadow-md mb-6" style="display: none;">
                <h3 class="text-xl font-bold mb-4">Resultado</h3>
                <div id="weatherInfo"></div>
            </div>

            <div id="errorMessage" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6" style="display: none;">
            </div>
        </div>
    </div>

    <script>
        document.getElementById('searchButton').addEventListener('click', async () => {
            const city = document.getElementById('cityInput').value;
            const weatherResult = document.getElementById('weatherResult');
            const weatherInfo = document.getElementById('weatherInfo');
            const errorMessage = document.getElementById('errorMessage');

            try {
                const response = await fetch(`/api/weather/${encodeURIComponent(city)}`);
                const data = await response.json();

                if (response.ok) {
                    errorMessage.style.display = 'none';
                    weatherResult.style.display = 'block';
                    weatherInfo.innerHTML = `
                        <p class="mb-2"><strong>Cidade:</strong> ${data.city}, ${data.country}</p>
                        <p class="mb-2"><strong>Temperatura:</strong> ${data.temperature}°C</p>
                        <p class="mb-2"><strong>Condição:</strong> ${data.description}</p>
                        <p class="mb-2"><strong>Umidade:</strong> ${data.humidity}%</p>
                        <p><strong>Velocidade do Vento:</strong> ${data.windSpeed} m/s</p>
                    `;
                } else {
                    throw new Error(data.error || 'Erro ao buscar dados do clima');
                }
            } catch (error) {
                weatherResult.style.display = 'none';
                errorMessage.style.display = 'block';
                errorMessage.textContent = error.message;
            }
        });
    </script>
</body>
</html>